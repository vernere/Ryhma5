{
  "include": ["src/**/*.{js,jsx,ts,tsx}"],
  "exclude": [
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/__test__/**",
    "**/__tests__/**",
    "src/**/__test__/**",
    "src/**/__tests__/**",
    "tests/**",
    "cypress/**",
    "coverage/**",
    "node_modules/**",
    "dist/**",
    "**/*.config.js",
    "**/vite.config.js",
    "**/cypress.config.js"
  ],
  "all": true,
  "reporter": ["json"],
  "report-dir": "./coverage/unit"
}